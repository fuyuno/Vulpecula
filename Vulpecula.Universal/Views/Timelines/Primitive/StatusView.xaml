<UserControl x:Class="Vulpecula.Universal.Views.Timelines.Primitive.StatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:Vulpecula.Universal.Views.Timelines.Primitive"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Vulpecula.Universal.ViewModels.Timelines.Primitives"
             d:DataContext="{d:DesignInstance vm:StatusViewModel}"
             d:DesignHeight="150"
             d:DesignWidth="360"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="52" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Image Width="48"
                   Height="48"
                   Margin="2"
                   VerticalAlignment="Top"
                   Source="{Binding Model.User.ProfileImageUrlHttps}" />
            <Image Width="24"
                   Height="24"
                   Margin="2,26"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Source="{Binding Model.Recipient.ProfileImageUrlHttps}"
                   Visibility="{Binding IsDirectMessage,
                                        Converter={StaticResource BooleanToVisibilityConverter}}" />
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="*" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBlock Text="{Binding Model.User.ScreenName, Converter={StaticResource StringFormatConverter}, ConverterParameter='@{0}'}" />
                <TextBlock Text="{Binding Model.User.Name}" />
            </StackPanel>
            <TextBlock Grid.Row="1"
                       Text="{Binding Model.Text}"
                       TextWrapping="WrapWholeWords" />
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <TextBlock Text="{Binding Model.CreatedAt}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>